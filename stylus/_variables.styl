// Custom checkbox
.label__checkbox
  margin 20px 0 0px 0 
  color white
  font-size 14px 
  font-weight 200
  display flex
  line-height 20px
.label__checkbox i 
  width 16px 
  height @width 
  border 1px solid grey
  display inline-block
