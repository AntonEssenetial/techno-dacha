@import '_plugins'
@import nib
@import '_variables'
@import '_components'
@import '_media'

body 
  font-family $body-font
  

.header
  

  &__top 
    background: green
    padding 6px 0
    select 
      background: transparent 
      border none 
      color yellow
      text-decoration: underline
      padding 0px
    span 
      color white
    strong 
      color white
    color white
    &__city
      position: relative
      +after('')
        display: inline-block
        triangle(6px, 4px, bottom, yellow)
        margin-left 1px
    &__city
    &__opend 
      margin-right 45px
    &__opend 
      span 
        color yellow
    &__col 
      margin-left 20px
    &__circle 
      +before('')
        width 6px 
        height @width
        background: yellow
        border-radius (50%)
        display: inline-block
        margin-right 17px
        position relative 
        top -2px
        

  &__middle 
    padding 20px 0

    &__col 
      margin-left 20px
    &__search-input
      padding-left 34px
      position: relative
      max-width 100px
      transition max-width 0.3s ease-in-out
      +placeholder()
        color dark
      &:focus 
        max-width 150px
        transition max-width 0.3s ease-in-out
    .cart-white
      color white

  &__bottom 
    background: grey
    height 60px
    position relative
    

.menu-wrapper
  width 1220px
  margin 0 auto 
  padding 0 20px
  

.main-menu
  

  &__item:hover 
    .main-menu__sub-menu
      display block
  &__sub-menu
    position absolute
    width: 100%
    left 0px 
    background: white
    top 60px
    padding 40px 0 20px 0
    z-index 2
    box-shadow: 0 22px 47px rgba(0, 0, 0, 0.22)
    display none
    &-wrapper
      width 1220px 
      margin 0 auto 
      padding 0 60px
      text-align: center
    &__link 
      color #616161
      img 
        display: block
        margin 0 auto
    &__item 
      display: inline-block
      width 116px
      margin 0 10px 20px 10px
      vertical-align: top
    &__img-wrapper
      height 50px
      display block
  &__item 
    width 100%
    text-align: center
    padding 0 10px
    height 60px
    display flex
    &:hover 
      .main-menu__link 
        color green
    &:last-child
      background: #f3f1e5
  &__item_active
    .main-menu__link 
      border-bottom 2px solid green
      color green
  &__link 
    justify-content: center;
    display flex
    text-align: center
    flex-direction: column;
    

.footer 
  background: #4b4b4b
  padding 30px 0
  
  &__acordion__item 
    line-height 35px
  &__acordion__item.open 
    span 
      triangle(10px, 10px, top, yellow)
  &__acordion__link 
    color white
    font-size 20px
    position relative 
    span 
      position absolute
      right -20px
      top 12px
      triangle(10px, 10px, bottom, yellow)
  &__acordion__sub-menu
    a 
      color yellow
      font-size 14px 
      line-height 25px
  &__responsive__menu 
    display none
  &__col__str 
    color white
    font-size 16px
    line-height 28px
  &__link__menu 
    color white
    font-size 16px
    line-height 28px
  &__link
    color #8a8a8a
    line-height 23px
  &__copy 
    color white
    font-size 14px
    margin 24px 0
    padding 0px
  &__dev 
    background: #696969
    border-radius 4px
    padding 10px
    text-align: center
    span 
      color white
      font-size 14px
  &__col__1 
    padding-right 50px
    text-align: center
  &__col__3 
    padding-left 40px
    display flex 
    flex-direction column
  &__socials 
    margin 0 0 20px 0
    width 167px
    align-self flex-end
  &__pay
    static()
    align-self flex-end
    text-align: right
    .row 
      justify-content flex-end
    img 
      height auto
      display: inline-block
      margin-left 2px
      margin-bottom 2px
    &__bottom 
      margin-top 25px


.section 
  

  &__slider 
    background: grey
    padding-top 20px
    margin-top 2px
    position relative
    +after('')
      left 0px 
      width 100% 
      height 40px 
      background: grey 
      position absolute
    img 
      width 100%
    .slick-slider-1 
      margin-bottom 15px
    .slider-wrapper 
      border-radius 10px 
      overflow hidden
      position: relative
      z-index 1
    .slick-dots
      bottom 4px 
    .slick-dots li button:before
      font-size 10px
      color white
      opacity 0.7
    .slick-dots li.slick-active button:before
      color yellow
      opacity: 1
    .slick-dots li
      margin 0px
    .slick-next:before
      sprite($sprite-next)
      display: block
      opacity: 1
      content ''
    .slick-prev:before
      sprite($sprite-prev)
      display: block
      opacity: 1
      content ''
    .slick-next
      right 13px
    .slick-prev
      left 13px
    .slick-prev, .slick-next
      width auto 
      height auto 
      z-index 1
      

  &__items 
    padding-bottom 60px
    
    
    &__big-item
      padding 30px 20px
      background: url(../images/main-page/1.jpg) no-repeat center left white
      background-size contain
      border 2px solid grey
      height 428px
    h2 
      a 
        font-size 33px 
        font-weight bold
    &__cat 
      color grey2
      margin 0 0 5px 0
    &__desc 
      font-size 20px 
      display: block
    &__price 
      font-size 33px 
      font-weight bold
      display: block
      margin-bottom 20px
    &__old-price 
      color grey2
      position relative
      font-size 16px
      +after('')
        height 1px 
        width 100%
        background: yellow
        display: block
        position: absolute
        top 10px
        transform rotateZ(-7deg)
    &__top 
      margin-left 46%
      width 282px
      margin-bottom 30px
    &__bottom 
      margin-left 71%
      width 150px
    &__mid-item
      padding 30px 20px 20px 20px
      background: url(../images/main-page/2.jpg) no-repeat center white
      background-size contain
      border 2px solid grey
      h2 
        a
          font-size 18px
          font-weight bold
      &__bottom
        position absolute
        bottom 20px
    &__col 
      &:hover
        box-shadow: 0 0 26px rgb(232, 232, 232);
        trs()
    &__small
      background: url(../images/main-page/3.jpg) no-repeat center right white
      padding 30px 20px 20px 20px
      background-size contain
      border 2px solid grey
      h2 
        width 120px
        a
          font-size 18px
          font-weight bold
      &-2 
        background: url(../images/main-page/4.jpg) no-repeat bottom right white
        background-size contain
        margin-top 20px
    &__small__small
      margin-top 29px
      position: relative
      top 10px
      .section__items__price
        font-size 20px
        margin-bottom 0px
      .section__items__old-price
        font-size 12px
        +after()
          top 6px
      .button_buy-small 
        margin-left 10px
  

  &__discounts

    &__row 
      margin 40px 0 70px 0


  &__item 
    border 2px solid #e6e5de
    padding 15px
    &:hover 
      box-shadow: 0 0 26px rgb(232, 232, 232);
      trs()
      
    &__timer
      background: dark
      color white 
      font-size 12px 
      position absolute
      top -8px 
      padding 2px 15px 2px 4px
      border-radius (10px)
      right 30px
      +before('')
        sprite($sprite-time)
        vam(-1px, 0px 5px 0 0)
    &_present 
      +after('')
        sprite($sprite-present)
        position: absolute
        top -20px
        right 0px
    &_discount 
      +after('')
        sprite($sprite-discount)
        position: absolute
        top -20px
        right 0px
    &_action 
      +after('')
        sprite($sprite-action)
        position: absolute
        top -20px
        right 0px
    &_new 
      +after('')
        sprite($sprite-new)
        position: absolute
        top -20px
        right 0px
    .section__items__cat
      margin-bottom 20px
    &__heading 
      font-size 22px
      display: block
    &__img 
      img 
        display block
        max-width 100%
        height auto
        margin 0 auto 
    &__price-row 
      margin 20px 0 0 0
      .section__items__price 
        height 30px
        font-size 30px
      .col__right 
        align-self: flex-end;
        

  &__service 
    padding-bottom 70px
    

    &__item 
      background: #333333
      border-radius 10px
      text-align: center
      padding-top 50px
      padding-bottom 60px
    &__heading 
      color white 
      font-size 30px
      margin 30px 0
    p 
      color #a1a1a1
      padding 0 30px
      

  &__brands
    
    
    &__row 
      padding 25px 0 0 0
      margin-left -10px 
      margin-right -10px
    .slide 
      width 151.5px
      border 2px solid #e6e5de
      border-radius (4px)
      padding 20px
      margin 0 10px
      img 
        max-width 100%
    &__slider 
      .slick-prev
        right 45px
        left auto
        width auto 
        height auto
    .slick-prev:before
      sprite($sprite-sprev)
      content ''
      display: block
      opacity 1
    .slick-prev:hover:before
      sprite($sprite-sprev-hover)
    .slick-next:before
      sprite($sprite-snext)
      content ''
      display: block
      opacity 1
    .slick-next:hover:before
      sprite($sprite-snext-hover)
    .slick-prev, .slick-next
      top -43%
    .slick-next
      right 5px
      width auto 
      height auto
      

  &__about 
    background: grey
    padding 60px 0
    margin 70px 0 0 0
    

    &__heading 
      font-size 30px
      margin 0 0 20px 0
    p 
      color #797979
    &__img-wrapper 
      img 
        max-width 100%
        height auto
    &__item 
      padding-right 60px
      

  &__news 
    padding 60px 0
    
    
    &__row 
      padding 30px 0 0 0
    &__item__img 
      border 1px solid #e6e5de
      a 
        display: block
      img 
        max-width 100%
        height auto 
        display: block
    &__item__link
      color green
      text-decoration: underline
      font-size 16px
      margin 20px 0
    &__date 
      color #a1a1a1
    p 
      color #797979
      margin 10px 0 0 0
